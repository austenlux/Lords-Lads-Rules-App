{
  "name": "lords-and-lads",
  "version": "1.6.0",
  "private": true,
  "op-sqlite": {
    "sqliteVec": true
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "sync:release-notes": "cp release_notes.md android/app/src/main/assets/release_notes.md",
    "build:android": "npm run sync:release-notes && cd android && ./gradlew assembleRelease",
    "build:android:bundle": "npm run sync:release-notes && cd android && ./gradlew bundleRelease",
    "build:apk": "npm run build:android",
    "install:android:release": "npm run sync:release-notes && cd android && ./gradlew installRelease",
    "launch:android": "adb shell am start -n com.lux.lnlrules/.MainActivity",
    "install:ios:release": "npx react-native run-ios --mode Release --simulator \"iPhone 16 Pro\" --no-packager",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@op-engineering/op-sqlite": "^15.2.5",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "react": "18.2.0",
    "react-native": "0.76.9",
    "react-native-fs": "^2.20.0",
    "react-native-markdown-display": "^7.0.2",
    "react-native-pager-view": "^8.0.0",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-svg": "^15.15.3"
  },
  "codegenConfig": {
    "name": "AppSpecs",
    "type": "modules",
    "jsSrcsDir": "src/specs",
    "android": {
      "javaPackageName": "com.lux.lnlrules"
    }
  },
  "overrides": {
    "markdown-it": "^12.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/cli": "^15.1.3",
    "@react-native-community/cli-platform-android": "^15.1.3",
    "@react-native/babel-preset": "^0.76.0",
    "@react-native/eslint-config": "^0.76.0",
    "@react-native/metro-config": "^0.76.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "patch-package": "^8.0.1",
    "prettier": "2.8.8",
    "react-native-svg-transformer": "^1.5.0"
  }
}
